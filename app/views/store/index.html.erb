<% if notice %>
<p id="notice" class="alert alert-info">
	<strong>Information </strong><%= notice %>
</p>
<% end %>

<% if flash[:error] %>
<p id="error" class="alert alert-error">
	<strong>Error </strong><%= flash[:error] %>
</p>
<% end %>

<h1><%= t('.title_html') %></h1>
<p class="lead">Find your books here.</p>

<% @products.each do |product| %>
<div class="entry bsa well">
	<%= image_tag(product.image_url, class: "thumbnail") %>
	<h3><%= product.title %></h3>
	<p>
		<%= sanitize(product.description) %>
	</p>
	<div class="price_line">
		<span class="price"><%= number_to_currency(product.price) %></span>
		<%= button_to t('.add_html'),
			line_items_path(product_id: product),
			remote: true,
			class: "btn btn-primary" %>
	</div>
</div>

<% end %>
