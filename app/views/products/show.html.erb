<p id="notice">
	<%= notice %>
</p>

<h1>Book Information</h1>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

<div id="book_info">
	<%= render @product %>
</div>

<div id="book_comments" class="well" style="overflow: hidden">
	<h4> Total <%= @product.comments.length %> comments: </h4>
	<%= render @product.comments.order('created_at desc') %>
</div>

