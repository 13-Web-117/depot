<h1><%= t('.page_title') %></h1>
<p class="lead">
	<%= t('.page_subtitle') %>
</p>
<p class="lead">
	<%= link_to t('.new_order'), new_order_path %>
</p>

<table class="table table-bordered table-striped table-hover">
	<thead>
		<tr>
			<th><%= t('.name') %></th>
			<th><%= t('.address') %></th>
			<th><%= t('.email') %></th>
			<th><%= t('.pay_type') %></th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td><%= order.name %></td>
			<td><%= order.address %></td>
			<td><%= order.email %></td>
			<td><%= order.pay_type %></td>
			<td><%= link_to t('.show'), order %></td>
			<td><%= link_to t('.edit'), edit_order_path(order) %></td>
			<td><%= link_to t('.destroy'), order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<br>

<div>
	<%= will_paginate @orders, renderer: BootstrapPagination::Rails %>
</div>
