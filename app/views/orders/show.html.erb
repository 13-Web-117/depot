<h1>Order Information</h1>
<div class="blur row-fluid span11" style="padding:20px; padding-top:20px">
	<h4>User Information<%= link_to "Ship", orders_ship_url(@order), class: "btn btn-primary pull-right" %></h4>
	<%= image_tag "head.jpg", class: "thumbnail span2" %>
	<div class="span9">
	<p id="notice">
		<%= notice %>
	</p>

	<p>
		<strong>Name:  </strong>
		<%= @order.name %>
	</p>

	<p>
		<strong>Address:  </strong>
		<%= @order.address %>
	</p>

	<p>
		<strong>Email:  </strong>
		<%= @order.email %>
	</p>

	<p>
		<strong>Pay type:  </strong>
		<%= @order.pay_type %>
	</p>
	</div>
</div>

<div class="blur span11" style="padding: 20px; margin-top:20px">
	<h4>Line Items Information</h4>
	<table class="table table-hover">
	<%= render @order.line_items %>
	</table>
</div>
