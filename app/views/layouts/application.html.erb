<!DOCTYPE html>
<html>
	<head>
		<title>Depot</title>
		<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
		<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
		<%= csrf_meta_tags %>
	</head>
	<body class='<%= controller.controller_name %>'>

		<div id="banner" class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<%= link_to @page_title || t('.title'), store_url, class: "brand" %>

					<div class="nav-collapse collapse" id="main-menu">
						<ul class="nav" id="main-menu-left">
							<li>
								<a href=""><%= t('.questions') %></a>
							</li>
							<li>
								<a href=""><%= t('.news') %></a>
							</li>
							<li>
								<a href=""><%= t('.contact') %></a>
							</li>
							<li class="dropdown">
								<a class="dropdown-toggle" data-toggle="dropdown" href="#"> <%= t('.language')%> <b class="caret"></b> </a>
								<ul class="dropdown-menu">
									<% LANGUAGES.each do |language| %>
									<li>
										<%= link_to language[0], store_path(locale: language[1]) %>
									</li>
									<% end %>
								</ul>
							</li>
						</ul>
						<form class="navbar-search pull-left" action="">
							<input type="text" class="search-query span2" placeholder="<%= t('.search')%>" />
						</form>
						<ul class="nav pull-right" id="main-menu-right">
							<% if session[:user_id] %>
							<li class="dropdown">
								<a class="dropdown-toggle" data-toggle="dropdown" href="#"> <%= session[:user_name] %> <b class="caret"></b> </a>
								
								<ul class="dropdown-menu">
									<li>
										<% if @cart %>
										<%= link_to 'My Cart', user_cart_show_user_cart_url %>
										<% end %>
									</li>
									<% if session[:user_permission] == 1 %>
									<li class="divider"></li>
									<li>
										<%= link_to 'Orders', orders_path %>
									</li>
									<li>
										<%= link_to 'Products', products_path %>
									</li>
									<li>
										<%= link_to 'Users', users_path %>
									</li>
									<% end %>
								</ul>
							</li>
							<li>
								<%= link_to 'Logout', logout_path, method: :delete %>
							</li>
							<%else%>
							<li>
								<%= link_to t('.login'), login_path %>
							</li>
							<li>
								<%= link_to t('.register'), new_user_path %>
							</li>
							<% end %>
						</ul>
					</div>
				</div>
			</div>
		</div>

		<div id="columns"  class="row-fluid">
			<div id="side" class="span3">
				<% if @cart %>
				<%= hidden_div_if(@cart.line_items.empty?, id: "cart") do %>
				<%= render @cart %>
				<% end %>
				<% end %>
			</div>
			<div id="main" class="span8">
				<%= yield %>
				<hr>
				<footer id="footer">
					<p class="pull-right">
						<a href="#top">Back to top</a>
					</p>
					Made by 13-web-117.
				</footer>
			</div>
		</div>

	</body>
</html>
