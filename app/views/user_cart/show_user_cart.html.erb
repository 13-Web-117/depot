<h1>Your Shopping Cart</h1>
<p class="lead">
	You can edit your cart here.
</p>

<%= form_for @cart, url: cart_url(@cart), method: :put do |f| %>
<table class="table table-bordered table-striped table-hover">
	<thead>
		<tr>
			<th>Title</th>
			<th>Price</th>
			<th>Quantity</th>
			<th>Total</th>
			<th>Operation</th>
		</tr>
	</thead>

	<tbody>
		<% @cart.line_items.each do |item| %>
			<%= f.fields_for :line_items, item do |item_form| %>
			<tr id="line_item_info">
				<td class="span3"><%= image_tag(item.product.image_url, class: "thumbnail") %><%= item.product.title %></td>
				<td><%= number_to_currency(item.product.price) %></td>
				<td><%= item_form.text_field :quantity, class: "input-small" %></td>
				<td><%= number_to_currency(item.total_price) %></td>
				<td>
					<%= link_to "Dele", 
								line_item_url(item),
								method: :delete,
								confirm: 'Are you sure?',
								class: "btn btn-danger" %> 
				</td>
			</tr>
			<% end %>
		<% end %>
	</tbody>
</table>

<div id="btn-group">
<%= link_to "Empty",
			 @cart,
			 confirm: 'Are you sure?',
			 method: :delete,
			 class: "btn btn-danger", 
			 id: "btn-empty" %>
<%= submit_tag "Update",
			   class: "btn btn-primary", 
			   id: "btn-update" %>
</div>
<% end %>

